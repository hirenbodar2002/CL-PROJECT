@model Registration.Models.Register
@{
    ViewData["Title"] = "Registr";
}

<div class="col-lg-4 col-md-12 text-black my-lg-auto">



    <div class="d-block align-items-center h-custom-2 px-5 ms-xl-4 mt-2 pt-2 pt-xl-0 mt-xl-n5 ">

        <form style="width: auto;" method="post">

            <div class="form-outline mb-2">
                <label class="form-label" asp-for="FirstName" for="firstName">First Name</label>
                <input type="text" asp-for="FirstName"  id="firstName" class="form-control form-control-lg" />



            </div>


            <div class="form-outline mb-2">
                <label class="form-label" asp-for="LastName" for="lastName">Last Name</label>
                <input type="text" asp-for="LastName" id="lastName" class="form-control form-control-lg" />

            </div>

            <div class="form-outline mb-2">
                <label class="form-label" asp-for="PhoneNumber">Phone Number</label>
                <input type="tel" asp-for="PhoneNumber" id="phoneNumber" class="form-control form-control-lg" />

            </div>

            <div class="form-outline mb-2">
                <label class="form-label" asp-for="Email" for="form2Example18">Email address</label>
                <input type="email" asp-for="Email" id="form2Example18" class="form-control form-control-lg" />

            </div>

            <div class="form-outline mb-2">
                <label class="form-label" asp-for="Password" for="form2Example28">Password</label>
                <input type="password" asp-for="Password" id="form2Example28" class="form-control form-control-lg" />
            </div>

            <div class="form-outline mb-2">
                <label class="form-label" asp-for="ConfrimPassword" for="form2Example28">Confrim Password</label>
                <input type="password" asp-for="ConfrimPassword" id="form2Example28" class="form-control form-control-lg" />
            </div>

            <div class="pt-1 mb-2 te">
                <button class="btn btn-info btn-lg btn-block" type="button"
                        style="background-color: white; border-radius: 24px; border-color: #F88634; color: #F88634;">
                    Register
                </button>
            </div>

            <p class="small mb-2 pb-lg-2 text-center"><a class="text-muted" href="#!">Lost your password?</a></p>
            <p class=" text-center">Alredy Registered? <a href="./index.html" class="link-info">Login now</a></p>


        </form>


    </div>
</div>